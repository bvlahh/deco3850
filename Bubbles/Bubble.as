package  {		import flash.display.Shape;	import flash.display.Sprite;	import flashx.textLayout.formats.Float;		public class Bubble extends Sprite {				private var scalar:int = 10;        private var size:uint = 80;        private var bgColor:uint = 0xCC0000;        private var borderColor:uint = 0xDDDDDD;        private var borderSize:uint = 0;				private var vector:Array = new Array();				public function Bubble() {			// constructor code			doDrawCircle();			vector[0] = 0;			vector[1] = 0;		}				public function step():void {						var newX = x + (vector[0] * scalar);			var newY = y + (vector[1] * scalar);						if (newX >= (stage.stageWidth - width) )				newX = x;						if (newY >= (stage.stageHeight - height) )				newY = y;						if (newX <= 0)				newX = x;						if (newY <= 0)				newY = y;						//this.parent.getChildAt(0);						x = newX;			y = newY;					}		        private function doDrawCircle():void {            var child:Shape = new Shape();            var halfSize:uint = Math.round(size/2);            child.graphics.beginFill(bgColor);            child.graphics.lineStyle(borderSize, borderColor);            child.graphics.drawCircle(halfSize, halfSize, halfSize);            child.graphics.endFill();            addChild(child);        }				public function setVector(newVector:Array):void {			vector[0] = newVector[0];			vector[1] = newVector[1];		}	}	}