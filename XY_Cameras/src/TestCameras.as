package  {		import uk.co.soulwire.cv.MotionTracker;		import flash.display.MovieClip;	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Shape;	import flash.display.Shape;	import flash.display.Sprite;	import flash.events.Event;	import flash.filters.ColorMatrixFilter;	import flash.media.Camera;	import flash.media.Video;	import fl.motion.Motion;	import flash.display.Shader;		[SWF(width="640", height="480", backgroundColor="#000000", frameRate="24")]		public class TestCameras extends Sprite {				private var tracker1 : MotionTracker;		private var tracker2 : MotionTracker;				private var xline;		private var yline;				public function TestCameras() {			addEventListener(Event.ADDED_TO_STAGE, onAddedToStage);		}				public function printCameras() {			trace(Camera.names);		}				private function onAddedToStage(event : Event) {			//printCameras();			initTracking();		}				private function initTracking() : void		{						var camW : int = 640;			var camH : int = 480;						var cam1 : Camera = Camera.getCamera("0");			cam1.setMode(camW, camH, stage.frameRate);						var cam2 : Camera = Camera.getCamera("1");			cam2.setMode(camW, camH, stage.frameRate);						var vid1 : Video = new Video(camW, camH);			vid1.attachCamera(cam1);						var vid2 : Video = new Video(camW, camH);			vid2.attachCamera(cam2);						tracker1 = new MotionTracker(vid1);			tracker2 = new MotionTracker(vid2);						xline = new Shape();			xline.graphics.lineStyle(0, 0xFF0000);						yline = new Shape();			yline.graphics.lineStyle(0, 0xFF0000);						this.addChild(xline);			this.addChild(yline);						addEventListener(Event.ENTER_FRAME, onEnterFrameHandler);					}				private function onEnterFrameHandler(event : Event) : void		{			tracker1.track();			tracker2.track();						//trace(tracker1.x, tracker2.x);						var i = 640-( tracker1.x );			var j = tracker2.x;			/*			var r = tracker1.motionArea;						//trace(r.y + r.height);						var colour = 0xFF0000;						if ( (r.y + r.height) > 400 )				colour = 0x00FF00;			*/			var colour = 0xFF0000;						xline.graphics.clear();			yline.graphics.clear();						xline.graphics.lineStyle(0, colour);			yline.graphics.lineStyle(0, colour);						xline.graphics.moveTo(0, i); 			xline.graphics.lineTo(640, i);						yline.graphics.moveTo(j, 0); 			yline.graphics.lineTo(j, 480);					}			}}