package  {		import flash.display.MovieClip;	import flash.events.Event;	import flash.display.Shader;	import flash.display.Shape;		public class Pattern extends MovieClip {				var red : Shape = new Shape();		var blue : Shape = new Shape();		var circleDia : int = 25;				public function Pattern() {						red.graphics.clear();			red.graphics.beginFill(0xFF0000);			red.graphics.drawCircle(0, 0, circleDia);						blue.graphics.clear();			blue.graphics.beginFill(0x0000FF);			blue.graphics.drawCircle(0, 0, circleDia);						this.addChild(red);			this.addChild(blue);						this.addEventListener(Event.ENTER_FRAME, frame);					}				private function frame(e:Event) : void {						red.x = int( Math.random() * (stage.stageWidth - circleDia) );			red.y = int( Math.random() * (stage.stageHeight - circleDia) );						blue.x = int( Math.random() * (stage.stageWidth - circleDia) );			blue.y = int( Math.random() * (stage.stageHeight - circleDia) );					}			}	}