package  {		import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.display.Shape;	import flash.geom.Point;		public class Pattern3 extends MovieClip {				var circleDia : uint = 50;		var redDot : Shape = new Shape();				var index : uint = 0;		var coords : Array = new Array();				public function Pattern3() {						coords.push( new Point(0, 0) );			coords.push( new Point(stage.stageWidth, 0) );			coords.push( new Point(0, stage.stageHeight) );			coords.push( new Point(stage.stageWidth, stage.stageHeight) );						coords.push( new Point(-circleDia, -circleDia) );						redDot.graphics.clear();			redDot.graphics.beginFill(0xFF0000);			redDot.graphics.drawCircle(coords[0].x, coords[0].y, circleDia);						this.addChild(redDot);						stage.addEventListener(MouseEvent.CLICK, m);					}				private function m(e : MouseEvent) : void {						index = (index + 1) % coords.length;						redDot.x = coords[index].x;			redDot.y = coords[index].y;					}			}	}