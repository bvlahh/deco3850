package  {		import flash.display.MovieClip;	import flash.events.Event;	import flash.display.Shader;	import flash.display.Shape;		public class Pattern2 extends MovieClip {				var red : Shape = new Shape();		var blue : Shape = new Shape();		var circleDia : int = 25;				public function Pattern2() {						step = 0;						red.graphics.clear();			red.graphics.beginFill(0xFF0000);			red.graphics.drawCircle(0, 0, circleDia);						blue.graphics.clear();			blue.graphics.beginFill(0x0000FF);			blue.graphics.drawCircle(0, 0, circleDia);						this.addChild(red);			this.addChild(blue);						this.addEventListener(Event.ENTER_FRAME, frame);					}				private var step : int;				private function frame(e:Event) : void {						step += 15;						red.x = int( step % (stage.stageWidth - circleDia) );			red.y = 2 * circleDia * int( step / (stage.stageWidth - circleDia) );						blue.x = int( (step-(4 * circleDia)) % (stage.stageWidth - circleDia) );			blue.y = 2 * circleDia * int( (step-(4 * circleDia)) / (stage.stageWidth - circleDia) );						if ( step > stage.stageWidth * stage.stageHeight / (2 * circleDia) )				step = 0;					}			}	}