package  {		import flash.display.MovieClip;	import flash.events.Event;	import Bubble;		public class Bubbles extends MovieClip {				private var balls : Array;				public function Bubbles() {						balls = new Array();						addEventListener(Event.ENTER_FRAME, onEnterFrameHandler);			addEventListener(Event.ADDED_TO_STAGE, onAddedToStage);					}				private function onEnterFrameHandler(event : Event) : void		{			recalc(mouseX, mouseY);		}				private function onAddedToStage(event : Event) {						for (var i = 0; i< 10; i++) {								var b = new Bubble();				addChild(b);								var b_x = Math.floor( Math.random() * stage.stageWidth ) - b.width;				var b_y = Math.floor( Math.random() * stage.stageHeight ) - b.height;								b.x = (b.width/2) + b_x;				b.y = (b.height/2) + b_y;								balls.push(b);							}					}				private function recalc(x : int, y : int) : void		{			for each (var b in balls) {				//b.setVector( new Array(((b.x + (b.width/2)) - x) / stage.stageWidth, ((b.y + (b.width / 2)) - y) / stage.stageHeight) );				b.setVector( new Array(((b.x + (b.width/2)) - x) / stage.stageWidth, ((b.y + (b.width / 2)) - y) / stage.stageHeight) );				b.step();			}		}			}	}