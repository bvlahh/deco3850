package  {		import flash.display.MovieClip;	import flash.media.Camera;	import flash.media.Video;	import flash.events.Event;	import flash.display.Bitmap;	import flash.display.Shape;	import flash.geom.Point;	import flash.filters.ColorMatrixFilter;	import flash.sampler.StackFrame;			public class CornerTracker extends MovieClip {				var cam:Camera;		var redTracker:RedTracker;		var blueTracker:BlueTracker;				var vid:Video;		var redCircle:Shape;		var blueCircle:Shape;				public function CornerTracker() {						cam = Camera.getCamera("1");			cam.setMode(640, 480, stage.frameRate);						redTracker = new RedTracker(cam, 640, 480);			blueTracker = new BlueTracker(cam, 640, 480);						/*			vid = new Video(640, 480);			vid.attachCamera(cam);			this.addChild(vid);			*/						///*						var bmp:Bitmap = new Bitmap(blueTracker.vid_current);			this.addChild(bmp);						//*/						redCircle = new Shape();			this.addChild(redCircle);						blueCircle = new Shape();			this.addChild(blueCircle);						addEventListener(Event.ENTER_FRAME, onEnterFrameHandler);					}				private function onEnterFrameHandler(event : Event) : void {						var redPoint:Point;			var bluePoint:Point;						if (redTracker != null)				redPoint = redTracker.track();						if (blueTracker != null)				bluePoint = blueTracker.track();						redCircle.graphics.clear();			redCircle.graphics.lineStyle(5, 0xFF0000);						blueCircle.graphics.clear();			blueCircle.graphics.lineStyle(5, 0x0000FF);						if (redPoint != null)				redCircle.graphics.drawCircle(redPoint.x - 5, redPoint.y - 5, 10);						if (bluePoint != null)				blueCircle.graphics.drawCircle(bluePoint.x - 5, bluePoint.y - 5, 10);					}			}	}