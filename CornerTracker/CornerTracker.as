package  {		import flash.display.MovieClip;	import flash.media.Camera;	import flash.media.Video;	import flash.events.Event;	import flash.display.Bitmap;	import flash.display.Shape;	import flash.geom.Point;	import flash.filters.ColorMatrixFilter;	import flash.sampler.StackFrame;			public class CornerTracker extends MovieClip {				var cam:Camera;		var tracker:ColourTracker;				var vid:Video;		var circle:Shape;				public function CornerTracker() {						cam = Camera.getCamera("0");			cam.setMode(640, 480, stage.frameRate);						tracker = new ColourTracker(cam, 640, 480);						vid = new Video(640, 480);			vid.attachCamera(cam);						//var bmp:Bitmap = new Bitmap(tracker.vid_current);			//this.addChild(bmp);			this.addChild(vid);						circle = new Shape();			this.addChild(circle);						addEventListener(Event.ENTER_FRAME, onEnterFrameHandler);					}				private function onEnterFrameHandler(event : Event) : void {						var point:Point;						if (tracker != null)				point = tracker.track();						circle.graphics.clear();			circle.graphics.lineStyle(5, 0xFF0000);						if (point != null)				circle.graphics.drawCircle(point.x - 5, point.y - 5, 10);					}			}	}